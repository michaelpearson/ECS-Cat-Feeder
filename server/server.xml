<?xml version="1.0" encoding="UTF-8"?>
<project name="server" default="all">
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  
  <path id="library.h2-1.3.176.classpath">
    <pathelement location="${basedir}/lib/h2-1.3.176.jar"/>
  </path>
  
  <path id="library.java_ee_6-java_ee_6.classpath">
    <pathelement location="${basedir}/lib/javax.annotation.jar"/>
    <pathelement location="${basedir}/lib/javax.ejb.jar"/>
    <pathelement location="${basedir}/lib/javax.jms.jar"/>
    <pathelement location="${basedir}/lib/javax.persistence.jar"/>
    <pathelement location="${basedir}/lib/javax.resource.jar"/>
    <pathelement location="${basedir}/lib/javax.servlet.jar"/>
    <pathelement location="${basedir}/lib/javax.servlet.jsp.jar"/>
    <pathelement location="${basedir}/lib/javax.servlet.jsp.jstl.jar"/>
    <pathelement location="${basedir}/lib/javax.transaction.jar"/>
  </path>
  
  <path id="library.json-simple-1.1.classpath">
    <pathelement location="${basedir}/lib/json-simple-1.1.jar"/>
  </path>

  <dirname property="module.server.basedir" file="${ant.file}"/>

  <property name="compiler.args.server" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  <property name="server.output.dir" value="${module.server.basedir}/../../../production/server"/>
  <property name="server.testoutput.dir" value="${module.server.basedir}/../../../../../test/server"/>

  <path id="server.module.bootclasspath"/>
  
  <path id="server.module.production.classpath">
    <path refid="library.java_ee_6-java_ee_6.classpath"/>
    <path refid="library.json-simple-1.1.classpath"/>
    <path refid="library.h2-1.3.176.classpath"/>
  </path>
  
  <path id="server.runtime.production.module.classpath">
    <pathelement location="${server.output.dir}"/>
    <path refid="library.java_ee_6-java_ee_6.classpath"/>
    <path refid="library.json-simple-1.1.classpath"/>
    <path refid="library.h2-1.3.176.classpath"/>
  </path>
  
  <path id="server.module.classpath">
    <pathelement location="${server.output.dir}"/>
    <path refid="library.java_ee_6-java_ee_6.classpath"/>
    <path refid="library.json-simple-1.1.classpath"/>
    <path refid="library.h2-1.3.176.classpath"/>
  </path>
  
  <path id="server.runtime.module.classpath">
    <pathelement location="${server.testoutput.dir}"/>
    <pathelement location="${server.output.dir}"/>
    <path refid="library.java_ee_6-java_ee_6.classpath"/>
    <path refid="library.json-simple-1.1.classpath"/>
    <path refid="library.h2-1.3.176.classpath"/>
  </path>

  <path id="server.module.sourcepath">
    <dirset dir="${module.server.basedir}">
      <include name="src"/>
    </dirset>
  </path>


  <target name="all" depends="package-server"/>
  
  <target name="Clean" description="cleanup module">
    <delete dir="${server.output.dir}"/>
    <delete dir="${server.testoutput.dir}"/>
  </target>
  


  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.server:war_exploded" value="${basedir}/out/artifacts/server_war_exploded"/>
    <mkdir dir="${artifacts.temp.dir}"/>
  </target>

  <target name="compile.module.server" depends="compile.module.server.production" description="Compile module server"/>

  <target name="compile.module.server.production" description="Compile module server; production classes">
    <mkdir dir="${server.output.dir}"/>
    <javac includeantruntime="false" destdir="${server.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.server}"/>
      <bootclasspath refid="server.module.bootclasspath"/>
      <classpath refid="server.module.production.classpath"/>
      <src refid="server.module.sourcepath"/>
    </javac>

    <copy todir="${server.output.dir}">
      <fileset dir="${module.server.basedir}/src">
        <type type="file"/>
      </fileset>
    </copy>
  </target>

  <target name="package-server" depends="init.artifacts, compile.module.server" description="Build server">
    <mkdir dir="${artifact.output.server:war_exploded}"/>
    <copy todir="${artifact.output.server:war_exploded}">
      <fileset dir="${basedir}/web"/>
    </copy>
    <mkdir dir="${artifact.output.server:war_exploded}/WEB-INF"/>
    <copy file="${basedir}/web/WEB-INF/web.xml" tofile="${artifact.output.server:war_exploded}/WEB-INF/web.xml"/>
    <mkdir dir="${artifact.output.server:war_exploded}/WEB-INF"/>
    <mkdir dir="${artifact.output.server:war_exploded}/WEB-INF/classes"/>
    <copy todir="${artifact.output.server:war_exploded}/WEB-INF/classes">
      <fileset dir="${server.output.dir}"/>
    </copy>
    <mkdir dir="${artifact.output.server:war_exploded}/WEB-INF/lib"/>
    <copy file="${basedir}/lib/javax.annotation.jar" tofile="${artifact.output.server:war_exploded}/WEB-INF/lib/javax.annotation.jar"/>
    <copy file="${basedir}/lib/javax.jms.jar" tofile="${artifact.output.server:war_exploded}/WEB-INF/lib/javax.jms.jar"/>
    <copy file="${basedir}/lib/javax.ejb.jar" tofile="${artifact.output.server:war_exploded}/WEB-INF/lib/javax.ejb.jar"/>
    <copy file="${basedir}/lib/javax.transaction.jar" tofile="${artifact.output.server:war_exploded}/WEB-INF/lib/javax.transaction.jar"/>
    <copy file="${basedir}/lib/javax.persistence.jar" tofile="${artifact.output.server:war_exploded}/WEB-INF/lib/javax.persistence.jar"/>
    <copy file="${basedir}/lib/javax.resource.jar" tofile="${artifact.output.server:war_exploded}/WEB-INF/lib/javax.resource.jar"/>
    <copy file="${basedir}/lib/javax.servlet.jar" tofile="${artifact.output.server:war_exploded}/WEB-INF/lib/javax.servlet.jar"/>
    <copy file="${basedir}/lib/javax.servlet.jsp.jstl.jar" tofile="${artifact.output.server:war_exploded}/WEB-INF/lib/javax.servlet.jsp.jstl.jar"/>
    <copy file="${basedir}/lib/javax.servlet.jsp.jar" tofile="${artifact.output.server:war_exploded}/WEB-INF/lib/javax.servlet.jsp.jar"/>
    <copy file="${basedir}/lib/json-simple-1.1.jar" tofile="${artifact.output.server:war_exploded}/WEB-INF/lib/json-simple-1.1.jar"/>
    <copy file="${basedir}/lib/h2-1.3.176.jar" tofile="${artifact.output.server:war_exploded}/WEB-INF/lib/h2-1.3.176.jar"/>
  </target>
</project>